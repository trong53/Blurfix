{% extends 'layout.html.twig' %}

{% block title %}Tendances{% endblock %}

{% block content %}
    <div class="mt-8">
        <div class="flex justify-between">
            <h2 class="text-white text-4xl">Tendances</h2>
            <div class="flex justify-center items-center">
                
                <label for="filter_category" class="mr-4"><i class="fi fi-filter text-[#1190ea]"></i></label>
                <select name="filter_category" id="filter_category"
                        class="text-lg text-gray-500 bg-transparent border-0 border-b-2 border-gray-200 appearance-none dark:text-gray-400 dark:border-gray-700 focus:outline-none focus:ring-0 focus:border-gray-200"
                        onchange="window.location = '/pages/trending.php?filter_category='+this.value">
                        {% for category in categories %}
                            <option value="{{ category }}">{{ category }}</option>
                        {% endfor %}
                </select>
                
            </div>
        </div>
        <div class="flex flex-col md:flex-row flex-wrap justify-around mt-8">
            {% for movie in movies %}
                {% include 'components/movie_card_trending.html.twig' %}
            {% endfor %}
        </div>
    </div>
{% endblock %}